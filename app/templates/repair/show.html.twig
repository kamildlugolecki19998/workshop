{% extends 'base.html.twig' %}

{% block title %}Repair{% endblock %}

{% block body %}
    <h1>Repair</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repair.id }}</td>
            </tr>
            <tr>
                <th>Car</th>
                <td>{{ repair.car }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ repair.date ? repair.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ repair.startDate ? repair.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ repair.endDate ? repair.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ repair.reason }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_repair_index') }}">back to list</a>

    <a href="{{ path('app_repair_edit', {'id': repair.id}) }}">edit</a>

    {{ include('repair/_delete_form.html.twig') }}
{% endblock %}
